{
  "name": "hnpwa-api",
  "version": "0.0.9",
  "description": "Deploy a Hacker News API on your own domain.",
  "main": "index.js",
  "bin" : { "hnpwa-api" : "./cli.js" },
  "scripts": {
    "tsc": "node_modules/.bin/tsc",
    "build": "rm -rf dist && npm run tsc && cp ./package.json ./dist/package.json && cp .npmignore ./dist/.npmignore && cp README.md ./dist/README.md",
    "watch": "node_modules/.bin/tsc -w",
    "serve": "npm run build && node_modules/.bin/nodemon ./dist/test/serve.test.js",
    "pack": "npm run build && npm pack dist"
  },
  "dependencies": {
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/yargs": "^8.0.1",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "firebase": "^4.0.0",
    "firebase-admin": "^5.0.1",
    "firebase-functions": "^0.5",
    "moment": "^2.18.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "typescript": "^2.3.4"
  },
  "typings": "index.d.ts"
}
