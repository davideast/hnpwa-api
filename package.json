    "express": "^4.15.3",
    "firebase": "^4.0.0",
    "firebase-admin": "~4.1.2",
    "firebase-functions": "^0.5",
    "node-fetch": "^1.7.0"
  },
  "private": true,
  "devDependencies": {
    "nodemon": "^1.11.0",
    "typescript": "^2.3.4"
  }
