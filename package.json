{
  "name": "hnpwa-api",
  "version": "0.0.1",
  "description": "Hacker News API on Cloud Functions",
  "scripts": {
    "build": "rm -rf dist && tsc && cp ./package.json ./dist/package.json && cp .npmignore ./dist/.npmignore",
    "watch": "node_modules/.bin/tsc -w",
    "serve": "npm run build && node_modules/.bin/nodemon ./dist/test/serve.test.js",
    "pack": "npm run build && npm pack dist"
  },
  "dependencies": {
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/node-fetch": "^1.6.7",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "firebase": "^4.0.0",
    "firebase-admin": "~4.1.2",
    "firebase-functions": "^0.5",
    "moment": "^2.18.1"
  },
  "typings": "index.d.ts",
  "private": true,
  "devDependencies": {
    "nodemon": "^1.11.0",
    "typescript": "^2.3.4"
  }
}
